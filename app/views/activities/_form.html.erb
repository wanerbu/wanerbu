<div class="ui_row">
  <div class="activity_title">
    <div class="crumbs"><a href="/">玩儿不网</a>&nbsp;&gt;&nbsp;<a href="/activity/">活动</a>&nbsp;&gt;&nbsp;编辑活动
    </div>
  </div>
</div><!-- /.ui_row -->  
<div class='ui_row mt20'>
  <div class='ui_left '>
    <div class='uitext'>
      <%= semantic_form_for([@activity], :html => { :class => 'form-horizontal',:multipart => true }) do |f| %>
        <%= f.inputs  do %>
          <dl class="activityInfo">
            <dt>活动名称：</dt>
            <dd>
            <%= f.input :name, :required => true,:label => false %></dd>
            <dt>活动类型：</dt>
            <dd>
            <%= f.input :activity_type, :as => :radio,:label => false  %>
            </dd>
            <dt>活动地点：</dt>
            <dd>
            <%= collection_select(:activity, :province_id, Province.all, :id, :province,{:prompt=>true},{:class =>"address_select"}) %>
            <span id="cities">
            </span>  
            <span id="areas">
            </span>
            <%= text_field_tag 'activity[activity_address]', @activity.activity_address %>  
            <dt>报名时间：</dt>
            <dd>
            <p data-language="javascript" class="datepair">
            <input id="activity_signup_start_time_1i" type="hidden" value="" name="activity[signup_start_time(1i)]">
            <input id="activity_signup_start_time_2i" type="hidden" value="" name="activity[signup_start_time(2i)]">
            <input id="activity_signup_start_time_3i" type="hidden" value="" name="activity[signup_start_time(3i)]">
            <input id="activity_signup_start_time_4i" type="hidden" value="" name="activity[signup_start_time(4i)]">
            <input id="activity_signup_start_time_5i" type="hidden" value="" name="activity[signup_start_time(5i)]">
            <input type="text"  targetfield="activity_signup_start_time" value="" class="date start" placeholder="报名开始日期...">
            <input type="text"  targetfield="activity_signup_start_time" value="" class="time start ui-timepicker-input" autocomplete="off" placeholder="报名开始时间..."> 至
            </br>
            <input id="activity_signup_end_time_1i" type="hidden" value="" name="activity[signup_end_time(1i)]">
            <input id="activity_signup_end_time_2i" type="hidden" value="" name="activity[signup_end_time(2i)]">
            <input id="activity_signup_end_time_3i" type="hidden" value="" name="activity[signup_end_time(3i)]">
            <input id="activity_signup_end_time_4i" type="hidden" value="" name="activity[signup_end_time(4i)]">
            <input id="activity_signup_end_time_5i" type="hidden" value="" name="activity[signup_end_time(5i)]">
            <input type="text" targetfield="activity_signup_end_time" style="margin-left: 65px;" class="date end"  placeholder="报名结束日期...">
            <input type="text" targetfield="activity_signup_end_time" class="time end ui-timepicker-input" autocomplete="off" placeholder="报名结束时间...">
            </p>
            </dd>
            <dt>活动时间：</dt>
            <dd>
            <p data-language="javascript" class="datepair">
            <input id="activity_start_time_1i" type="hidden" value="" name="activity[start_time(1i)]">
            <input id="activity_start_time_2i" type="hidden" value="" name="activity[start_time(2i)]">
            <input id="activity_start_time_3i" type="hidden" value="" name="activity[start_time(3i)]">
            <input id="activity_start_time_4i" type="hidden" value="" name="activity[start_time(4i)]">
            <input id="activity_start_time_5i" type="hidden" value="" name="activity[start_time(5i)]">
            <input type="text"  targetfield="activity_start_time" class="date start" placeholder="活动开始日期...">
            <input type="text"  targetfield="activity_start_time" class="time start ui-timepicker-input" autocomplete="off" placeholder="活动开始时间..."> 至
            </br>
            <input id="activity_end_time_1i" type="hidden" value="" name="activity[end_time(1i)]">
            <input id="activity_end_time_2i" type="hidden" value="" name="activity[end_time(2i)]">
            <input id="activity_end_time_3i" type="hidden" value="" name="activity[end_time(3i)]">
            <input id="activity_end_time_4i" type="hidden" value="" name="activity[end_time(4i)]">
            <input id="activity_end_time_5i" type="hidden" value="" name="activity[end_time(5i)]">
            <input type="text" targetfield="activity_end_time" style="margin-left: 65px;" class="date end" placeholder="活动结束日期...">
            <input type="text" targetfield="activity_end_time" class="time end ui-timepicker-input" autocomplete="off" placeholder="活动结束时间...">
            </dd>
            <dt>人数限制：</dt>
            <dd>
            <%= f.input :limit_num,:label => false  %>人<span class="ml10 c999 fs12">留空或为0表示不限人数</span></dd>
            <dt style=" margin-left: 12px">联系人：</dt>
            <dd><%= f.input :contact_name,:label => false  %></dd>
            <dt>联系方式：</dt>
            <dd><%= f.input :contact_telephone,:label => false%></dd>
            <dt style=" margin-left: 30px">QQ：</dt>
            <dd><%= f.input :qq,:label => false  %></dd>
            <dt>活动费用：</dt>
            <dd><%= f.input :activity_cost,:label => false  %><span class="ml10 c999 fs12">填0或不填表示免费</span></dd>
            <dt>活动标识：</dt>
            <dd><%= f.input :logo, :as =>:file,:required => true,:label => false %></dd>
            <dt style="margin-left: -65px;">活动详情:</dt>
            <dd style="margin-top: 10px; margin-left: 65px;"><%= f.kindeditor :details,:simple_mode => true,:label => false %></dd>
          </dl>
          <input id="user_id" type="hidden" value="<%=current_user.nil? ? " " : current_user.id%>" name="activity[user_id]">
          <input id="activity_court_id" type="hidden" value="" name="activity[court_id]">
        <% end -%>
        <%= f.actions do %>
          <%= f.action :submit, :button_html => { :class => "btn btn-primary",:id=>"submit_activity" }, :as => :button %>
        <% end -%>
      <% end %>
    </div><!--uitext-->
  </div><!--ui_left-->
  <div class='ui_right'>
    <div class='kuang'>
      <div class="mod_hd">
        <h2>组织者</h2>
      </div>
      <div class="mod_bd">
        <div class="ui_abeam">
          <div class="uipic">
            <a target="_blank" href="#" title="伞下晴空99">
              <img width="50" height="50" src="../../assets/img/default_head.png" alt="伞下晴空99">
            </a>
          </div>
          <div class="uitext">
            <p class="CC3300">伞下晴空99
            <span class="unApprove" title="未认证"></span>
            </p>
          </div>
        </div><!--ui_abeam-->
      </div><!--mod_bd-->
    </div><!--kuang-->
  </div><!--ui_right-->
</div><!-- /.ui_row -->  
