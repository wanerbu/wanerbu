  <%= semantic_form_for([:admin, :master, @admin], :html => { :class => 'form-horizontal' }) do |f| %>
    <%= f.inputs :name => t('views.defaults.label.base_info') do %>
      <%= f.input :login_id, :required => true, :input_html => {:readonly => !@admin.new_record?}  %>
      <%= f.input :email, :input_html => { :class => "" } %>
    <% end -%>
    <%= f.inputs :name => t('views.defaults.label.ext_info') do %>
      <%= f.input :first_name %>
      <%= f.input :last_name %>
      <%= f.input :telephone_no %>
      <%# f.input :status, :as => :radio %>
    <% end -%>
    <%= f.actions do %>
      <%= f.action :submit, :button_html => { :class => "btn btn-primary" }, :as => :button %>
      <%= f.action :cancel, :as => :link %>
    <% end -%>
  <% end %>
