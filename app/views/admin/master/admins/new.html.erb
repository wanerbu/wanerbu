<% content_for :sub_menu do %>
  <%= render :partial => 'admin/master/admins/sub_menu_start', :locals => {:active_path => new_admin_master_admin_path } -%>
  <%= render 'common_parts/sub_menu_end' -%>
<% end %>

<h3>新建管理员</h3>
<div class='span8'>
  <%= semantic_form_for([:admin, :master, @admin], :html => { :class => 'form-horizontal' }) do |f| %>
    <%= f.input :email, :input_html => { :class => "span4" }, :hint => "add your email here" %>
    <%= f.input :login_id %>
    <%= f.input :password %>
    <%= f.inputs :first_name, :last_name, :name => "姓名" %>
    <%= f.actions %>
  <% end %>
</div>
