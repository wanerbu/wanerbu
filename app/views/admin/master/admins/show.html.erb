<% content_for :sub_menu do %>
  <%= render :partial => 'admin/master/admins/sub_menu_start', :locals => {:active_path => nil } -%>
    <li class="active">
      <%= link_to t('admin.nav.main_menu.common.show', model: Admin.model_name.human), admin_master_admin_path(@admin) %>
    </li>
  <%= render 'common_parts/sub_menu_end' -%>
<% end %>

<div class='wb-content-sub-title'>
  <div>
    <% if can? :update, @admin %>
      <%= link_to t('views.defaults.actions.edit'), edit_admin_master_admin_path(@admin), {class: "btn btn-primary"} %>
    <% end %>
    <%= link_to t('views.defaults.actions.lock'), nil, {class: "btn btn-primary"} %>
    <%= link_to t('views.defaults.actions.destroy'), admin_master_admin_path(@admin), 
                { method: :delete, class: "btn btn-primary", confirm: t('activemodel.confirm.destroy') } %>
  </div>
  <div class='wb-clear-both'></div>
</div>

<div class="wb-content-detail">
  <table class="table table-bordered" style="width: 100%;">
    <tbody>
      <tr>
        <td><%= Admin.human_attribute_name(:login_id) %></td>
        <td><%= @admin.login_id -%></td>
      </tr>
      <tr>
        <td><%= Admin.human_attribute_name(:email) %></td>
        <td><%= @admin.email -%></td>
      </tr>
      <tr>
        <td><%= Admin.human_attribute_name(:name) %></td>
        <td><%= @admin.name -%></td>
      </tr>
      <tr>
        <td><%= Admin.human_attribute_name(:telephone_no) %></td>
        <td><%= @admin.telephone_no -%></td>
      </tr>
      <tr>
        <td><%= Admin.human_attribute_name(:status) %></td>
        <td><%= @admin.status_text -%></td>
      </tr>
    </tbody>
  </table>
</div>
