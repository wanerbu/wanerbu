  <%= semantic_form_for([:admin, :master, @role], :html => { :class => 'form-horizontal' }) do |f| %>
    <%= f.inputs :name => t('views.defaults.label.base_info') do %>
      <%= f.input :name, :required => true, :input_html => {:readonly => !@role.new_record?}  %>
      <%= f.input :function_codes, :input_html => { :class => "" } %>
    <% end -%>
    <%= f.actions do %>
      <%= f.action :submit, :button_html => { :class => "btn btn-primary" }, :as => :button %>
      <%= f.action :cancel, :as => :link %>
    <% end -%>
  <% end %>
