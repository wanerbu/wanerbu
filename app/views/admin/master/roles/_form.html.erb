  <%= semantic_form_for([:admin, :master, @role], :html => { :class => 'form-horizontal' }) do |f| %>
    <%= f.inputs :name => t('views.defaults.label.base_info') do %>
      <%= f.input :name, :required => true %>
    <% end -%>

    <%= f.inputs :name => t('activerecord.attributes.role.function_codes') do %>
      <table class='span12 table table-condensed'>
          <tr></tr>
          <% Function::FUNCTION_GROUPS.each do |group| %>
            <tr class='span12'>
              <td class='span3'><%= group[:title] %></td>
              <td>
                <ul style="list-style: none">
                <% group[:functions].each do |func| %>
                  <li style="float: left; margin: 3px 15px 3px 0;">
                    <label>
                      <%= check_box_tag "role[function_codes][]", Function::FUNCTIONS[func][:code], @role.has_function?(func) %>
                      <%= Function::FUNCTIONS[func][:abbr_name] %>
                    </label>
                  </li>
                <% end %>
                </ul>
              </td>
            </tr>
          <% end %>
      </table>
    <% end -%>

    <%= f.actions do %>
      <%= f.action :submit, :button_html => { :class => "btn btn-primary" }, :as => :button %>
      <%= f.action :cancel, :as => :link %>
    <% end -%>
  <% end %>
