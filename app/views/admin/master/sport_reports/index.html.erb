<% end %>

<% content_for :sub_menu do %>
  <%= render :partial => 'admin/master/sports/sub_menu_start', :locals => {:active_path => admin_master_sport_reports_path } -%>
  <%= render 'common_parts/sub_menu_end' -%>
<% end %>

<div class="wb-search-condition-container alert alert-success">
  <%= form_for [:admin, :master, @sport_report], :html => {:method => :get} do |f| -%>
    <% @sport_report.filters.each do |filter| -%>
      <div class="wb-datagrid-filter-content">
        <%= f.datagrid_label filter %>
        <%= f.datagrid_filter filter %>
      </div>
    <% end -%>

    <div class='wb-datagrid-filter-action'>
      <button type='submit' class='btn btn-primary'><%= t('views.defaults.actions.search')%></button>
      <button type='button' class='btn'><%= t('views.defaults.actions.clear')%></button>
    </div>
    <div class='wb-clear-both'></div>
  <% end -%>
</div>

<div class="search-result">
  <div class='wb-result-total'>Total: <%= @sport_report.assets.count %> ä»¶</div>
  <%= will_paginate @assets %>
  <div class='wb-clear-both'></div>
  <div>
  <%= datagrid_table(@sport_report, @assets) %>
  </div>
  <%= will_paginate @assets %>
</div>
