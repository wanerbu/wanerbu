  <%= semantic_form_for([:admin, :master, @sport], :html => { :class => 'form-horizontal' }) do |f| %>
      <%= f.input :name %>
      <%= f.input :intro %>
      <%= f.input :sort %>
      <% Attribute.all.each do |attribute| -%>
            <div>
              <%= label_tag :attribute_ids, attribute.name -%>
              <%= check_box_tag :attribute_ids, attribute.id, @sport.attributes.include?(attribute), :name => 'sport[attribute_ids][]' -%>
             </div>
      <% end -%>
    <%= f.actions do %>
      <%= f.action :submit, :button_html => { :class => "btn btn-primary" }, :as => :button %>
      <%= f.action :cancel, :as => :link %>
    <% end -%>
  <% end %>
