<style type="text/css">
  #l-map{height:100%;width:100%;border-right:2px solid #bcbcbc;}
  #r-result{height:100%;width:100%;}
</style>

<div class="ui_row">
  <div class="map">
    <div class='mapModify'>
      <div class="search_panel">
        <h3>交通驾车查询</h3>
      </div>
      <div  id="pattern" class="search_icon_tab">
        <a title="驾车" onclick="tabs(this)" class="<%= 'select' if params[:searchtype] == '1' %>"><img src="blank.gif" class="car"></a>
        <a title="公共交通" onclick="tabs(this)" class="<%= 'select' if params[:searchtype] == '2'%>"><img src="blank.gif" class="bus"></a>
        <a title="步行" onclick="tabs(this)" class="<%= 'select' if params[:searchtype] == '3'%>"><img src="blank.gif" class="men"></a>
      </div>
      <div class="search_form">
        <ul>
          <li>
          <div id="l-map"></div>
          <div id="r-result">
            <span title="起点" class="map_ico_a"></span>
            <input type="text" id="suggestId" value="<%=params[:fromaddress]%>" size="20" alt="请输入起点" class="text" style="width:174px;" />
          </div>
          <div id="searchResultPanel" style="width:150px;height:auto;">
          </div>
          </li>
          <li>
          <span title="终点" class="map_ico_b"></span>
          <input type="text" value="<%=params[:toaddress]%>" class="text" style="width:174px;" id="endAddress">
          </li>
          <li>
          <a onclick="mDriving();return false;" href=""><button type="button" class="btn btn-info more">查询路线</button></a>
          </li>
        </ul>
      </div>
      <div id="resultPanel2" style="display: block;margin-top: 15px;">
        <div id="r-result2"></div>
      </div>
    </div><!--mapModify-->
    <div class='mapInfo'>
      <div id="allmap"></div>
    </div><!--mapInfo-->
  </div><!--map-->
</div><!--ui_row-->
<form>
  <input type="hidden" name="city" id="city" value="<%=params[:city]%>"/>
  <input type="hidden" name="gym_name" id="gym_name" value="<%=params[:gym_name]%>"/>
</form>

<script type="text/javascript">

  // 百度地图API功能
