  <%= render 'common_parts/sub_menu_end' -%>
<% end %>

<div class="wb-search-condition-container alert alert-success">
  <%= form_for [:user, :master, @court_report], :html => {:method => :get} do |f| -%>
    <% @court_report.filters.each do |filter| -%>
      <div class="wb-datagrid-filter-content">
        <%= f.datagrid_label filter %>
        <%= f.datagrid_filter filter %>
      </div>
    <% end -%>

    <div class='wb-datagrid-filter-action'>
      <button type='submit' class='btn btn-primary'><%= t('views.defaults.actions.search')%></button>
      <button type='button' class='btn'><%= t('views.defaults.actions.clear')%></button>
    </div>
    <div class='wb-clear-both'></div>
  <% end -%>
</div>

<div class="search-result">
  <div class='wb-result-total'>Total: <%= @court_report.assets.count %> ä»¶</div>
