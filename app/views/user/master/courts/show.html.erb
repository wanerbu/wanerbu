<% content_for :sub_menu do %>
  <%= render :partial => 'admin/master/sports/sub_menu_start', :locals => {:active_path => nil } -%>
    <li class="active">
      <%= link_to t('admin.nav.main_menu.common.show', model: Sport.model_name.human), admin_master_sport_path(@sport) %>
    </li>
  <%= render 'common_parts/sub_menu_end' -%>
<% end %>

<div class='wb-content-sub-title'>
  <div>
    <%= link_to t('views.defaults.actions.edit'), edit_admin_master_sport_path(@sport), {class: "btn btn-primary"} %>
    <%= link_to t('views.defaults.actions.destroy'), admin_master_sport_path(@sport), 
                { method: :delete, class: "btn btn-primary", confirm: t('activemodel.confirm.destroy') } %>
  </div>
  <div class='wb-clear-both'></div>
</div>

<div class="wb-content-detail">
  <table class="table table-bordered" style="width: 100%;">
    <tbody>
      <tr>
        <td><%= Sport.human_attribute_name(:name) %></td>
        <td><%= @sport.name -%></td>
      </tr>
      <tr>
        <td><%= Sport.human_attribute_name(:intro) %></td>
        <td><%= @sport.intro -%></td>
      </tr>
      <tr>
        <td><%= Sport.human_attribute_name(:sort) %></td>
        <td><%= @sport.sort -%></td>
      </tr>
      <tr>
        <td>项目属性</td>
        <td>
            <% @sport.sport_properties.each do |sport_property| -%>
            <div>
              <%= sport_property.property.name -%>: 
              <%= sport_property.default_value-%>
              <%= sport_property.property.unit-%>
             </div>
           <% end -%>
         </td>
       </tr>
    </tbody>
  </table>
</div>
